<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_alert_box"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/default_top_margin">

    <TextView
        android:id="@+id/tv_message"
        style="@style/MRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_left_margin"
        android:layout_marginRight="@dimen/default_right_margin"
        android:gravity="center"
        tools:text="We are still validating your license" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/default_top_margin"
        android:background="@color/ink" />

    <TextView
        android:id="@+id/bt_action"
        style="@style/ButtonLinkBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/default_left_margin"
        android:layout_marginRight="@dimen/default_right_margin"
        tools:text="LABEL" />

</LinearLayout>
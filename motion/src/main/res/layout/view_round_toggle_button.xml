<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_round_feedback"
    android:paddingLeft="12dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingRight="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/iv_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:src="@drawable/ic_plus"
        android:tint="@color/main"/>

    <TextView
        android:id="@+id/tv_toggle_button"
        style="@style/SRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/iv_toggle_button"
        android:lineSpacingExtra="0dp"
        tools:text="New booking" />

</RelativeLayout>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESSED -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ground_light" />
            <stroke android:width="1dp" android:color="@color/danger" />
            <corners android:radius="@dimen/rounded_container_radius" />
        </shape>
    </item>

    <!-- DEFAULT -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ground_lightest" />
            <stroke android:width="1dp" android:color="@color/danger" />
            <corners android:radius="@dimen/rounded_container_radius" />
        </shape>
    </item>

</selector>